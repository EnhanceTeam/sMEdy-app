<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smedy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!--  ?attr/colorPrimaryVariant  -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/blue_background</item>
    </style>

    <!--  Toolbar  -->
    <style name="ToolbarColor">
        <item name="android:backgroundTint">@color/blue_background</item>
    </style>

    <style name="ToolbarSoftBlue">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:backgroundTint">@color/soft_blue_100</item>
    </style>

    <!--  TextInputLayout  -->
    <style name="TextInputLayoutColor">
        <!-- Hint color and label color in FALSE state -->
<!--        <item name="android:textColorHint">@color/Color Name</item>-->
<!--        <item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlNormal">@color/blue_500</item>
        <item name="colorControlActivated">@color/blue_500</item>
    </style>
</resources>